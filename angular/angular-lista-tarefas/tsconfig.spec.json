/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"skipLibCheck": true,
		"incremental": false,
		"outDir": "./out-tsc/spec",
		"types": ["jest", "node"]
	},
	"include": [
		"src/**/*.spec.ts",
		"src/**/*.d.ts"
	],
	"exclude": [
		"src/environment/*.ts",
		"main.ts",
		"polyfill.ts"
	]
}
